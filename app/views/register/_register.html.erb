
 <%= link_to "Register using Facebook", "/auth/facebook" %>  
  <%= link_to "Register using Linkedin", "/auth/linkedin" %>  

<%= form_for @customer, :url => {:controller => :register, :action => :registerCustomer}, html: {class: "form-horizontal"} do |c| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> </h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= c.label(:email, class: "col-sm-2 control-label") %>
    <div class="col-sm-10">
      <%= c.text_field(:email, class: "form-control", type: "email", placeholder: "e-mail") %>
    </div>
  </div>
  <div class="field form-group">
    <%= c.label(:password, class: "col-sm-2 control-label") %>
    <div class="col-sm-10">
      <%= c.text_field(:password, class: "form-control", type: "password", placeholder: "password") %>
    </div>

  </div>
  <div class="actions">
    <%= c.submit("Enter", class: "btn btn-default pull-right") %>
  </div>
<% end %>


