<div class="page-header">
	<h1>Settings</h1>
</div>
<div class="panel panel-default">
	<div class="panel-heading">
		<div class="panel-title">
			Info for stylists
		</div>
	</div>
	<div class="panel-body">
		<%= form_tag({},{:class => "form-horizontal"}) do %>
			<div class="form-group">
				<%= label_tag("Primary style:", nil, {class: "col-sm-2 control-label"}) %>
				<div class="col-sm-10">
					<%= text_field_tag("primaryStyle", nil, options = {"class" => "form-control", "placeholder" => ""}) %>
				</div>
			</div>
			<div class="form-group">
				<%= label_tag("Secondary style:", nil, {class: "col-sm-2 control-label"}) %>
				<div class="col-sm-10">
					<%= text_field_tag("secondaryStyle", nil, options = {"class" => "form-control", "placeholder" => ""}) %>
				</div>
			</div>
			<div class="form-group">
				<%= label_tag("Size:", nil, {class: "col-sm-2 control-label"}) %>
				<div class="col-sm-10">
					<%= text_field_tag("primaryStyle", nil, options = {"class" => "form-control", "placeholder" => ""}) %>
				</div>
			</div>
			<div class="form-group">
				<%= label_tag("Height:", nil, {class: "col-sm-2 control-label"}) %>
				<div class="col-sm-10">
					<%= text_field_tag("primaryStyle", nil, options = {"class" => "form-control", "placeholder" => ""}) %>
				</div>
			</div>
			<div class="form-group">
				<%= label_tag("Shoe size:", nil, {class: "col-sm-2 control-label"}) %>
				<div class="col-sm-10">
					<%= text_field_tag("primaryStyle", nil, options = {"class" => "form-control", "placeholder" => ""}) %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-12">
					<%= button_tag("Update", {class: "btn btn-default pull-right"})%>
				</div>
			</div>
		<% end %>
	</div>
</div>
