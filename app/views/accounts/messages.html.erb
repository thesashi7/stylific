<div class="page-header">
	<h1>Inbox</h1>
</div>

<div id="messages-container" class="panel-body">
	<div class="row">
		<ul class="list-group col-sm-4">
			<a class="list-group-item active">
				<span class="badge">1</span>
					Joe Shmack
			</a>
			<a class="list-group-item">
				<span class="badge">2</span>
					Tim Houer
			</a>
			<a class="list-group-item">
				<span class="badge"></span>
					Tony Nawke
			</a>
		</ul>

		<div class="col-sm-8">
			<div class="well" id="conversation-container">
				
			</div>
			<%= form_tag do%>
				<div class="form-group">
					<%= text_area_tag("message", nil, {class: "form-control"}) %>
				</div>
				<div class="form-group">
					<%= button_tag("Enter", {class: "btn btn-default pull-right"})%>
				</div>
			<% end %>
		</div>
	</div>
</div>	
