		<script type="text/javascript">
		
			$("body").click(function (event){
				var target = $(event.target);
				if(target.is(".list-group-item")){
					$("#menu-1").removeClass("active");
					$("#menu-2").removeClass("active");
					$("#menu-3").removeClass("active");
					$("#menu-4").removeClass("active");
					target.addClass("active");
				}
				if(target.is("#menu-1")){
					$("#personal-information").css("display", "block");
					$("#edit-style").css("display", "none");
					$("#edit-global-style").css("display", "none");
					$("#faq").css("display", "none");
				}else if(target.is("#menu-2"))
				{
					$("#personal-information").css("display", "none");
					$("#edit-style").css("display", "block");
					$("#edit-global-style").css("display", "none");
					$("#faq").css("display", "none");
				}else if(target.is("#menu-3"))
				{
					$("#personal-information").css("display", "none");
					$("#edit-style").css("display", "none");
					$("#edit-global-style").css("display", "block");
					$("#faq").css("display", "none");
				}else if(target.is("#menu-4"))
				{
					$("#personal-information").css("display", "none");
					$("#edit-style").css("display", "none");
					$("#edit-global-style").css("display", "none");
					$("#faq").css("display", "block");
				}else if(target.is(".style-settings-header"))
				{
					$(target).next(".style-settings-options").slideToggle("fast");
				}
			});

			function enableFields(event)
