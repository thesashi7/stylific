				$("#address").removeAttr("disabled");
				$("#city").removeAttr("disabled");
				$("#state").removeAttr("disabled");
				$("#zip").removeAttr("disabled");
				$("#submit-btn").html("Update");
				$("#submit-btn").attr("id", "update-btn");
